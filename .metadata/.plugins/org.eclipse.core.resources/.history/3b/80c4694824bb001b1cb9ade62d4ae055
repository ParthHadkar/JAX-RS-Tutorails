package com.rest.filters;

import java.io.IOException;

import javax.ws.rs.container.ContainerRequestContext;
import javax.ws.rs.container.ContainerRequestFilter;
import javax.ws.rs.container.ContainerResponseContext;
import javax.ws.rs.container.ContainerResponseFilter;

public class LoggerFilter implements ContainerRequestFilter,ContainerResponseFilter
{

	@Override
	public void filter(ContainerRequestContext requestContext) throws IOException 
	{
		System.out.println("Request Filter");
		System.out.println("Request Header "+requestContext.getHeaders());	
	}
	
	@Override
	public void filter(ContainerRequestContext requestContext, ContainerResponseContext responseContext)
			throws IOException 
	{
		System.out.println("Response Filter");
		System.out.println("Response Header "+requestContext.getHeaders());	
	}


}
